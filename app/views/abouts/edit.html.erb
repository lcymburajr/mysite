<div class="container back-end">
  <div class="row">
    <div class="col-sm-offset-3 col-sm-6">
      <h2>Edit About</h2>
      <%= form_for @about do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :second_description %>
          <%= f.text_area :second_description, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :document %>
          <%= f.file_field :document %>
        </div>
        <%= f.submit 'Save', class: "btn btn-primary" %>
        <%= link_to "Delete", :about, method: :delete, data: { confirm: "You sure?" }, class: "pull-right" %>
      <% end %>
    </div>
  </div>
</div>
